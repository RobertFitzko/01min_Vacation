<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fhku.a01min_vacation">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <!--<uses-permission android:name="android.permission.ACTION_OPEN_DOCUMENT"/>-->

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/vac">
        <activity android:label="Willkommen bei 01 Minute Vacation" android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity

            android:name=".ShowActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:label="Stellen Sie Ihre Vacation zusammen" android:name=".CreateActivity" />
        <activity android:label="Blider auswählen" android:name=".SelectPicsActivity" />
        <activity android:label="Musik auswählen" android:name=".SelectMusic"></activity>
    </application>

</manifest>